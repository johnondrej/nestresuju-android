<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_question"
        style="@style/TextAppearance.Headline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/radio_group_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_btn_answer_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_test_answer_0" />

        <RadioButton
            android:id="@+id/radio_btn_answer_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/input_test_answer_1" />

        <RadioButton
            android:id="@+id/radio_btn_answer_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/input_test_answer_2" />

        <RadioButton
            android:id="@+id/radio_btn_answer_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/input_test_answer_3" />

        <RadioButton
            android:id="@+id/radio_btn_answer_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/input_test_answer_4" />

    </RadioGroup>

</LinearLayout>