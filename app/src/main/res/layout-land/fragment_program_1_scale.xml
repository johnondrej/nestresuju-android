<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="6"
        android:progress="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_question"
        style="@style/TextAppearance.Headline3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seek_satisfiability"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="9"
        android:progress="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_question" />

    <TextView
        android:id="@+id/txt_seek_label_1"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_2"
        app:layout_constraintTop_toBottomOf="@id/seek_satisfiability" />

    <TextView
        android:id="@+id/txt_seek_label_2"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_1"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_3"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <TextView
        android:id="@+id/txt_seek_label_3"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_2"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_4"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <TextView
        android:id="@+id/txt_seek_label_4"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_3"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_5"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <TextView
        android:id="@+id/txt_seek_label_5"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_4"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_6"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <TextView
        android:id="@+id/txt_seek_label_6"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_5"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_7"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <TextView
        android:id="@+id/txt_seek_label_7"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_6"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_8"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <TextView
        android:id="@+id/txt_seek_label_8"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_7"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_9"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <TextView
        android:id="@+id/txt_seek_label_9"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_8"
        app:layout_constraintRight_toLeftOf="@id/txt_seek_label_10"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <TextView
        android:id="@+id/txt_seek_label_10"
        style="@style/TextAppearance.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="10"
        android:translationX="-4dp"
        app:layout_constraintLeft_toRightOf="@id/txt_seek_label_9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_seek_label_1" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_continue"
        app:layout_constraintRight_toLeftOf="@id/btn_continue"
        app:layout_constraintTop_toTopOf="@id/btn_continue" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        style="@style/PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>