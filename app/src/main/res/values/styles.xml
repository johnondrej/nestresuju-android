<resources>

    <!-- Base application theme -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <!-- Colorful library custom styles -->

    <style name="HomeStyle">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ProgramStyle">
        <item name="android:colorPrimary">@color/programPrimary</item>
        <item name="colorPrimary">@color/programPrimary</item>
        <item name="android:colorPrimaryDark">@color/programPrimaryDark</item>
        <item name="colorPrimaryDark">@color/programPrimaryDark</item>
        <item name="android:colorAccent">@color/programAccent</item>
        <item name="colorAccent">@color/programAccent</item>
    </style>

    <style name="DiaryStyle">
        <item name="android:colorPrimary">@color/diaryPrimary</item>
        <item name="colorPrimary">@color/diaryPrimary</item>
        <item name="android:colorPrimaryDark">@color/diaryPrimaryDark</item>
        <item name="colorPrimaryDark">@color/diaryPrimaryDark</item>
        <item name="android:colorAccent">@color/diaryAccent</item>
        <item name="colorAccent">@color/diaryAccent</item>
    </style>

    <style name="LibraryStyle">
        <item name="android:colorPrimary">@color/libraryPrimary</item>
        <item name="colorPrimary">@color/libraryPrimary</item>
        <item name="android:colorPrimaryDark">@color/libraryPrimaryDark</item>
        <item name="colorPrimaryDark">@color/libraryPrimaryDark</item>
        <item name="android:colorAccent">@color/libraryAccent</item>
        <item name="colorAccent">@color/libraryAccent</item>
    </style>

    <style name="AboutStyle">
        <item name="android:colorPrimary">@color/aboutPrimary</item>
        <item name="colorPrimary">@color/aboutPrimary</item>
        <item name="android:colorPrimaryDark">@color/aboutPrimaryDark</item>
        <item name="colorPrimaryDark">@color/aboutPrimaryDark</item>
        <item name="android:colorAccent">@color/aboutAccent</item>
        <item name="colorAccent">@color/aboutAccent</item>
    </style>

    <!-- Text styles -->

    <style name="TextAppearance.PrimaryText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.Emphasized" parent="TextAppearance.PrimaryText">
        <item name="android:textColor">@color/textHeadline</item>
    </style>

    <style name="TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Error" parent="TextAppearance.PrimaryText">
        <item name="android:textColor">@color/textError</item>
    </style>

    <!-- Buttons -->

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <!-- Text Inputs -->

    <style name="TextInputDefault" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox" />

    <style name="TextInputLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

</resources>
