<resources>

    <!-- Base application theme -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <!-- Text styles -->

    <style name="TextAppearance.PrimaryText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Buttons -->

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <!-- Text Inputs -->

    <style name="TextInputDefault" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

</resources>
